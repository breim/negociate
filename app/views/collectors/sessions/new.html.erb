<div class="container">
	<div class="row clearfix vertical-offset-40">
		<div class="col-md-12 column">
			<%= link_to "Voltar", root_path,:class => "pull-right" %>
			<h3>
				<i class="fa fa-briefcase fa-1x"></i>  Painel administrativo
			</h3>

			<hr>

			<div class="row clearfix">
				<div class="col-md-6 column">
					<img src="/img/briefcase.png" class="column vertical-offset-40 right-40">
				</div>
			</div>

			<div class="col-md-6 column vertical-offset-20">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<div class="form-group">
	  					<i class="fa fa-envelope"></i>  <label>E-mail</label>
		  				<%= f.email_field :email,:type => "email",:class => "form-control",:autofocus => true %>
		  			</div>

				  	<div class="form-group">
						<i class="fa fa-lock"></i>  <label>Senha</label>
						<%= f.password_field :password,:type => "password",:class => "form-control" %>
					</div>

					<div class="pull-left">
						<% if devise_mapping.rememberable? -%>
							<%= f.check_box :remember_me %> Lembrar meus dados
						<% end -%>
					</div>
					<%= f.submit "Acesse sua conta",:class => "btn btn-primary btn-large pull-right" %>
				<% end %>
			</div>
		</div>
	</div>
</div>



