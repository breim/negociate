<% if params[:search].present? %>

	<div class="panel panel-info">
		<div class="panel-heading">
			<% if @companies.count == 0 %>
				Nenhum resultado encontrado<br>
				<%= link_to "Cadastrar uma nova empresa",new_company_registration_path %>
			<% else %>
				Resultado da busca: <%= pluralize(@companies.count, "encontrada") %><br>
				<small> Clique no nome da empresa para entrar em seu perfil </small>
			<% end %>
		</div>	
		<table class="table table-hover">
			<thead>
				<tr>
		      		<th>#</th>
		      		<th>Nome</th>
		      		<th>CNPJ</th>
		      		<th>Contato</th>
		    	</tr>
		    </thead>
		    <tbody>
		    	<% @companies.each do |company| %>
		    		<tr>
		    			<td><%= company.id %></td>
			   			<td><%= link_to company.nome[0..20],company_path(company) %></td>
		    			<td><%= company.cnpj %></td>
		    			<td><%= company.contato %></td>
		    		</tr>
  				<% end %>
		    </tbody>	
		</table>
	</div>

<% end %>