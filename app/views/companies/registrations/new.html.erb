<%= render :partial => '/layouts/menu_lateral' %>

<h4> Cadastro de empresa </h4>
<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <label>Nome</label>
    <%= f.text_field :nome,:class => "form-control" %>
  </div>

 <div class="row">
 	<div class="col-xs-6 col-md-4">
 		<label>CNPJ</label>
    	<%= f.text_field :cnpj,:class => "form-control" %>	
 	</div>
 </div>

  <div class="form-group">
    <label>Contato</label>
    <%= f.text_field :contato,:class => "form-control" %>
  </div> 

  <div class="form-group">
    <label>E-mail</label>
    <%= f.email_field :email,:class => "form-control" %>
  </div>

  <div class="form-group">
    <label>Telefone</label>
    <%= f.text_field :telefone,:class => "form-control" %>
  </div>

  <div class="form-group">
    <label>Celular</label>
    <%= f.text_field :celular,:class => "form-control" %>
  </div>


  <div class="form-group">
    <label>Senha</label>
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="form-group">
    <label>Confirme a senha</label>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>
  <%= f.hidden_field :collector_id, :value => current_collector.id %>


<%= f.submit "Cadastrar",:class => "btn btn-primary btn-lg btn-block" %>
<% end %>

<%= render :partial => '/layouts/footer' %>




